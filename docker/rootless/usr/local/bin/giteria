#!/bin/bash

###############################################################
# This script sets defaults for giteria to run in the container #
###############################################################

# It assumes that you place this script as giteria in /usr/local/bin
#
# And place the original in /usr/lib/giteria with working files in /data/giteria
GITERIA="/app/giteria/giteria"
WORK_DIR="/var/lib/giteria"
APP_INI="/etc/giteria/app.ini"

APP_INI_SET=""
for i in "$@"; do
	case "$i" in
	"-c")
		APP_INI_SET=1
		;;
	"-c="*)
		APP_INI_SET=1
		;;
	"--config")
		APP_INI_SET=1
		;;
	"--config="*)
		APP_INI_SET=1
		;;
	*)
	;;
	esac
done

if [ -z "$APP_INI_SET" ]; then
	CONF_ARG=("-c" "${GITEA_APP_INI:-$APP_INI}")
fi


# Provide docker defaults
GITERIA_WORK_DIR="${GITERIA_WORK_DIR:-$WORK_DIR}" exec -a "$0" "$GITERIA" "${CONF_ARG[@]}" "$@"
